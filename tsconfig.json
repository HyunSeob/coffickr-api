{
    "compilerOptions": {
      "outDir": "./dist/",
      "lib": ["es5", "es6", "dom"],
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "target": "es6",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowJs": true
    },
    "compileOnSave": false,
    "exclude": [
      "node_modules",
      "!node_modules/@types"
    ]
}
